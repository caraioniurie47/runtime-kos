<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <StripSymbols>false</StripSymbols>
    <Nullable>enable</Nullable>
    <IlcToolsPath>/home/ilc-tools</IlcToolsPath>
    <IlcHostPackagePath>TODO</IlcHostPackagePath>
    <IlcVerboseLogging>false</IlcVerboseLogging>
    <CppCompilerAndLinker>aarch64-kos-g++</CppCompilerAndLinker>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.ILCompiler; runtime.linux-arm64.Microsoft.DotNet.ILCompiler" Version="8.0.0-dev" />
  </ItemGroup>

</Project>
